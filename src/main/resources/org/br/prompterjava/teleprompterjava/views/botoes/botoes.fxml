<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.image.*?>

<HBox fx:id="barraControle" alignment="CENTER" spacing="15.0" styleClass="barra-principal"
      stylesheets="@style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.br.prompterjava.teleprompterjava.controller.BotoesController">
  <padding>
    <Insets bottom="10.0" left="15.0" right="15.0" top="10.0"/>
  </padding>

  <StackPane>
    <Circle fx:id="circuloPulso" fill="#10b98133" radius="22.0" visible="false" mouseTransparent="true"/>
    <ToggleButton fx:id="btnPlayPause" onAction="#aoClicarPlayPause" styleClass="btn-play" text="▶"/>
  </StackPane>

  <Button onAction="#aoReiniciar" styleClass="btn-icon">
    <tooltip><Tooltip text="Reiniciar texto"/></tooltip>
    <graphic>
      <ImageView fx:id="imgIconeRestart" fitHeight="18.0" fitWidth="18.0">
        <Image url="@../../images/refresh.png"/>
      </ImageView>
    </graphic>
  </Button>

  <Separator orientation="VERTICAL" prefHeight="20.0" styleClass="separador"/>

  <HBox alignment="CENTER" spacing="5.0">
    <Button onAction="#decrementarVelocidade" styleClass="btn-ajuste" text="−"/>
    <VBox alignment="CENTER" minWidth="60">
      <Label styleClass="txt-pequeno" text="VELOCIDADE"/>
      <Label fx:id="lblValorVelocidade" styleClass="txt-valor" text="0.0x"/>
    </VBox>
    <Button onAction="#incrementarVelocidade" styleClass="btn-ajuste" text="+"/>
  </HBox>

  <Separator orientation="VERTICAL" prefHeight="20.0" styleClass="separador"/>

  <VBox alignment="CENTER" spacing="2">
    <Label styleClass="txt-pequeno" text="OPACIDADE"/>
    <Slider fx:id="sliderTransparencia" min="20.0" max="100.0" value="100.0" prefWidth="90.0" />
  </VBox>

  <Separator orientation="VERTICAL" prefHeight="20.0" styleClass="separador"/>

  <ToggleButton fx:id="btnFantasma" onAction="#alternarClickThrough" styleClass="btn-icon">
    <tooltip><Tooltip text="Modo Fantasma (Scroll Lock)"/></tooltip>
    <graphic>
      <ImageView fitHeight="20.0" fitWidth="20.0">
        <Image url="@../../images/ghost.png"/>
      </ImageView>
    </graphic>
  </ToggleButton>

  <Button onAction="#inserirBlocoCodigo" styleClass="btn-icon">
    <tooltip><Tooltip text="Snippet de Código"/></tooltip>
    <graphic>
      <Label text="&lt;/&gt;" style="-fx-text-fill: #10b981; -fx-font-weight: bold;"/>
    </graphic>
  </Button>

  <Button onAction="#settings" styleClass="btn-icon">
    <graphic>
      <ImageView fitHeight="20.0" fitWidth="20.0">
        <Image url="@../../images/gear.png" />
      </ImageView>
    </graphic>
  </Button>
</HBox>