          <FlowPane fx:id="barraControle"
                    alignment="CENTER"
                    hgap="10"
                    vgap="10"
                    styleClass="painel-vidro">
          </FlowPane>

          <Button onAction="#toggleBarra"
                  styleClass="botao-seta-topo">
            <graphic>
